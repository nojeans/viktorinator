							"    pm.expect(json).to.have.property(\"answer\");",
							"});",
							"",
							"pm.test(\"Field types are correct\", function () {",
							"    var json = pm.response.json();",
							"    pm.expect(json.category).to.be.a(\"string\");",
							"    pm.expect(json.question).to.be.a(\"string\");",
							"    pm.expect(json.answer).to.be.an(\"array\");",
							"    pm.expect(json.answer.length).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Fields are not empty\", function () {",
							"    var json = pm.response.json();",
							"    pm.expect(json.category).to.not.be.empty;",
							"    pm.expect(json.question).to.not.be.empty;",
							"    pm.expect(json.answer[0]).to.not.be.empty;",
							"});"
